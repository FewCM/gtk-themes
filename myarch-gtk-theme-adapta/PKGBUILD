
pkgname=myarch-gtk-theme-adapta
pkgver=1.0
pkgrel=1
pkgdesc="Adapta gtk theme for myarch"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	local _themesdir=${pkgdir}/usr/share/themes
	mkdir -p "$_themesdir"
	cp -r ${srcdir}/* "$_themesdir"
}
